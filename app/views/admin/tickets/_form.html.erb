<%= form_for [:admin, @ticket] do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <div class="field">
      <%= f.label :user_id, 'Пользователь' %>
      <%= f.collection_select :user_id, User.all, :id, :email %>
    </div>

    <div class="field">
      <%= f.label :user_name, 'ФИО' %>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <%= f.label :user_passport, 'Данные паспорта' %>
      <%= f.text_field :user_passport %>
    </div>

    <div class="field">
      <%= f.label :first_station_id, 'Станция отправления' %>
      <%= f.collection_select :first_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :last_station_id, 'Станция прибытия' %>
      <%= f.collection_select :last_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :train_id, 'Поезд' %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit "#{@ticket.new_record? ? 'Купить' : 'Изменить'}" %>
    </div>
<% end %>