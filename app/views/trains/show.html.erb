<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Маршрут:</strong>
  <% if @train.route %>
    <%= @train.route.name %>
  <%else%>
    не назначен
  <%end%>
</p>

<p>
  <strong>Текущая станция:</strong>
  <% if @train.current_station %>
      <%= @train.current_station.title %>
  <%else%>
      не назначен
  <%end%>
</p>

